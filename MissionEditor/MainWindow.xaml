        xmlns:avalonDock="http://schemas.xceed.com/wpf/xaml/avalondock"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" />
        <avalonDock:DockingManager Grid.Row="1" x:Name="DManager">
            <avalonDock:DockingManager.Theme>
                <!--<avalonDock:AeroTheme />-->
                <!--<avalonDock:VS2010Theme />-->
                <!--<avalonDock:Office2007BlackTheme />-->
                <!--<avalonDock:Office2007BlueTheme />-->
                <!--<avalonDock:Office2007SilverTheme />-->
                <!--<avalonDock:GenericTheme />-->
                <!--<avalonDock:MetroTheme />-->
                <!--<avalonDock:Windows10Theme />-->
                <!--<avalonDock:Vs2013BlueTheme />-->
